<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Metaphor</h5>
                <button type="button" class="close" onclick="cancelEdit();">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="col-form-label"><h4>Metaphor</h4></label>
                            <textarea class="md-textarea form-control new-metaphor-textarea" rows="3" id="edit-text" name="text" placeholder="Edit Metaphor"></textarea>
                        </div>
                              
                        <div class="form-group">
                            <label class="col-form-label" for="explanation"><h4>Explanation</h4></label>
                            <textarea class="md-textarea form-control new-metaphor-textarea" rows="3" id="edit-explanation" name ="explanation" placeholder="Edit explanation"></textarea>
                        </div>
                    </form>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="cancelEdit();">Cancel</button>
                <button type="button" class="btn btn-primary" id="save-changes-button">Save changes</button>
            </div>
        </div>
    </div>
</div>